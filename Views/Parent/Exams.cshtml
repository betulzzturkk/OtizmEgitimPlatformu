@model List<AutismEducationPlatform.Web.Models.ViewModels.ExamListViewModel>
@{
    ViewData["Title"] = "Sınavlar";
    Layout = "_ParentLayout";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Sınavlar</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Sınav Adı</th>
                                <th>Durum</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].Id</td>
                                <td>@Model[i].Title</td>
                                <td>
                                    @if (Model[i].Taken)
                                    {
                                        <span class="badge bg-success">Girdiniz</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Açık</span>
                                    }
                                </td>
                                <td>
                                    @if (!Model[i].Taken)
                                    {
                                        <a href="/Parent/Exam?id=@Model[i].Id" class="btn btn-primary">Sınava Gir</a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary" disabled>Tekrar Giremezsiniz</button>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 