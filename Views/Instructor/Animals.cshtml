@{
    ViewData["Title"] = "Hayvanlar";
    Layout = "_InstructorLayout";
}

<link rel="stylesheet" href="/css/animals-bg.css" />

<div class="body-animals-bg" style="background-image: url('/images/animals/animal-bg-pattern.png'), linear-gradient(135deg, #FFB347 0%, #6B48FF 50%, #FF6B6B 100%); background-size: 300px, cover; background-repeat: repeat;">
    <div class="cloud"></div>
    <div class="cloud cloud2"></div>
    <div class="cloud cloud3"></div>
    <div class="container py-5">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="mb-3" style="font-size:2.5rem; font-weight:800; color:#6B48FF;" data-aos="fade-up">
                    <i class="fas fa-paw me-2"></i> Hayvanlar
                </h2>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">
                    Hayvanları tanı, seslerini dinle ve özelliklerini öğren!
                </p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/cat.jpg" alt="Kedi" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Kedi</h4>
                    <p>Kediler oyuncu ve meraklıdır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/kedi.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/dog.jpg" alt="Köpek" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Köpek</h4>
                    <p>Köpekler sadık ve sevimli hayvanlardır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/kopek.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/cow.jpg" alt="İnek" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>İnek</h4>
                    <p>İnekler sakin ve süt veren hayvanlardır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/inek.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/bird.jpg" alt="Kuş" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Kuş</h4>
                    <p>Kuşlar uçar ve güzel sesler çıkarır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/kus.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/horse.jpg" alt="At" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>At</h4>
                    <p>Atlar hızlı koşar ve güçlüdür.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/at.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/lion.jpg" alt="Aslan" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Aslan</h4>
                    <p>Aslan ormanın kralıdır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/aslan.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/chicken.jpg" alt="Tavuk" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Tavuk</h4>
                    <p>Tavuklar yumurta yapar ve gıdaklar.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/tavuk.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/elephant.jpg" alt="Fil" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Fil</h4>
                    <p>Filler büyük ve güçlüdür.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/animals/fil.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
function playSound(path) {
    var audio = new Audio(path);
    audio.play();
}
</script> 