@{
    ViewData["Title"] = "Trafik Levhaları";
    Layout = "_InstructorLayout";
}

<div class="container py-5">
    <div class="row mb-3">
        <div class="col-12">
            <a href="/Instructor/Education" class="btn btn-outline-secondary" style="position: absolute; left: 20px; top: 20px; z-index: 10;"><i class="fas fa-arrow-left me-2"></i>Geri Dön</a>
        </div>
    </div>
    <div class="text-center mb-5" data-aos="fade-up">
        <h1 class="display-4 fw-bold text-primary mb-3">Trafik Levhaları</h1>
        <p class="lead text-muted">Trafik levhalarını tanı, seslerini dinle ve anlamlarını öğren!</p>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
            <div class="card h-100 shadow-lg border-0 text-center p-4 traffic-card" style="background: linear-gradient(135deg, #FFB347 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                <img src="/images/traffic/dur.jpg" alt="Dur" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                <h4>Dur</h4>
                <p>Yolda durmamız gerektiğini belirtir.</p>
                <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/traffic/dur.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
            <div class="card h-100 shadow-lg border-0 text-center p-4 traffic-card" style="background: linear-gradient(135deg, #FFB347 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                <img src="/images/traffic/hastane.jpg" alt="Hastane" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                <h4>Hastane</h4>
                <p>Yakında hastane olduğunu belirtir.</p>
                <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/traffic/hastane.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
            <div class="card h-100 shadow-lg border-0 text-center p-4 traffic-card" style="background: linear-gradient(135deg, #FFB347 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                <img src="/images/traffic/bisiklet.jpg" alt="Bisiklet" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                <h4>Bisiklet</h4>
                <p>Bisiklet yolunu gösterir.</p>
                <button class="btn btn-outline-light mb-3" onclick="playSound('/sounds/traffic/bisiklet.mp3')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
            </div>
        </div>
        <!-- Diğer trafik levhaları da Parent/TrafficSigns.cshtml'deki gibi eklenebilir -->
    </div>
</div>
<script>
function playSound(path) {
    var audio = new Audio(path);
    audio.play();
}
</script> 