<script>
    function toggleChatbot() {
        const bot = document.getElementById("chatbot");
        const button = document.querySelector('button[onclick="toggleChatbot()"]');
        if (bot.style.display === "none") {
            bot.style.display = "flex";
            button.style.transform = "scale(1.1)";
            setTimeout(() => button.style.transform = "scale(1)", 300);
        } else {
            bot.style.display = "none";
            button.style.transform = "scale(0.9)";
            setTimeout(() => button.style.transform = "scale(1)", 300);
        }
    }

    function speakMessage(message) {
        const utterance = new SpeechSynthesisUtterance(message);
        utterance.lang = "tr-TR";
        speechSynthesis.speak(utterance);
    }

    function recordVoice() {
        const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
        recognition.lang = "tr-TR";
        recognition.interimResults = false;
        recognition.maxAlternatives = 1;

        recognition.onresult = function (event) {
            const transcript = event.results[0][0].transcript;
            document.getElementById("chatInput").value = transcript;
            sendMessage();
        };

        recognition.onerror = function (event) {
            alert("Ses tanÄ±ma hatasÄ±: " + event.error);
        };

        recognition.start();
    }

    async function sendMessage() {
        const input = document.getElementById("chatInput");
        const message = input.value.trim();
        if (!message) return;

        appendMessage("Siz", message);
        input.value = "";

        const response = await fetch('/api/chat', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ message })
        });

        if (response.ok) {
            const data = await response.json();
            appendMessage("YardÄ±mcÄ± Asistan", data.reply);
            speakMessage(data.reply);
        } else {
            const errorMessage = "Bir hata oluÅŸtu. LÃ¼tfen tekrar deneyin.";
            appendMessage("YardÄ±mcÄ± Asistan", errorMessage);
            speakMessage(errorMessage);
        }
    }

    function appendMessage(sender, message) {
        const chat = document.getElementById("chatMessages");
        const div = document.createElement("div");
        div.style.marginBottom = "12px";
        div.style.padding = "8px 12px";
        div.style.borderRadius = "8px";
        div.style.maxWidth = "80%";

        if (sender === "Siz") {
            div.style.backgroundColor = "#6B48FF";
            div.style.color = "white";
            div.style.marginLeft = "auto";
        } else {
            div.style.backgroundColor = "#f0f0f0";
            div.style.color = "#333";
            div.style.marginRight = "auto";
        }

        div.innerHTML = `<strong>${sender}:</strong><br>${message}`;
        chat.appendChild(div);
        chat.scrollTop = chat.scrollHeight;
    }

    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("chatInput").addEventListener("keypress", function (e) {
            if (e.key === "Enter") {
                sendMessage();
            }
        });

        const inputRow = document.querySelector("#chatbot div[style*='display: flex']");
        if (inputRow) {
            const micButton = document.createElement("button");
            micButton.innerHTML = "ğŸ¤";
            micButton.style.marginLeft = "8px";
            micButton.style.background = "linear-gradient(135deg, #6B48FF 0%, #FF6B6B 100%)";
            micButton.style.color = "white";
            micButton.style.border = "none";
            micButton.style.padding = "8px 12px";
            micButton.style.borderRadius = "4px";
            micButton.addEventListener("click", recordVoice);
            inputRow.appendChild(micButton);
        }
    });
</script>